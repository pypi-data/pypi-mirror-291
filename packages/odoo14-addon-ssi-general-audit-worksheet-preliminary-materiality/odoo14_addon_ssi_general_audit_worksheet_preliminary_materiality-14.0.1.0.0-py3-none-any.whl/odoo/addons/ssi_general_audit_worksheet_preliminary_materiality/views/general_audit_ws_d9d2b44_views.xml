<odoo>

    <record id="general_audit_ws_d9d2b44_view_search" model="ir.ui.view">
        <field name="name">general_audit_ws_d9d2b44 form</field>
        <field name="model">general_audit_ws_d9d2b44</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_ws_d9d2b44_view_tree" model="ir.ui.view">
        <field name="name">general_audit_ws_d9d2b44 tree</field>
        <field name="model">general_audit_ws_d9d2b44</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_tree"
        />
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_d9d2b44_view_form" model="ir.ui.view">
        <field name="name">general_audit_ws_d9d2b44 form</field>
        <field name="model">general_audit_ws_d9d2b44</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_general_audit.general_audit_worksheet_mixin_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="materiality" string="Materiality">
                        <group
                            name="materiality_1"
                            colspan="4"
                            col="2"
                            string="Base Amount"
                        >
                            <field name="base_amount_source" />
                            <field name="computation_item_id" />
                            <field name="general_audit_computation_id" invisible="1" />
                            <field name="other_amount_ok" />
                            <field name="other_amount_source" />
                            <field name="other_base_amount" />
                            <field
                                name="base_computation_amount"
                                string="Base Amount"
                            />
                        </group>
                        <group
                            name="materiality_2"
                            colspan="4"
                            col="2"
                            string="Overall Materiality"
                        >
                            <field
                                name="overall_materiality_percentage"
                                string="Percentage"
                            />
                            <field name="overall_materiality" string="Amount" />
                            <field
                                name="overall_materiality_consideration"
                                string="Consideration"
                            />
                        </group>
                        <group
                            name="materiality_3"
                            colspan="4"
                            col="2"
                            string="Performance Materiality"
                        >
                            <field
                                name="performance_materiality_percentage"
                                string="Percentage"
                            />
                            <field name="performance_materiality" string="Amount" />
                            <field
                                name="performance_materiality_consideration"
                                string="Consideration"
                            />
                        </group>
                        <group
                            name="materiality_4"
                            colspan="4"
                            col="2"
                            string="Tolerable Misstatement"
                        >
                            <field
                                name="tolerable_misstatement_percentage"
                                string="Percentage"
                            />
                            <field name="tolerable_misstatement" string="Amount" />
                            <field
                                name="tolerable_misstatement_consideration"
                                string="Consideration"
                            />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_ws_d9d2b44_action" model="ir.actions.act_window">
        <field name="name">Preliminary Materiality</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_ws_d9d2b44</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_ws_d9d2b44_menu"
        name="Preliminary Materiality"
        parent="ssi_general_audit.menu_general_audit_risk_assesment"
        action="general_audit_ws_d9d2b44_action"
        sequence="1300"
        groups="general_audit_ws_d9d2b44_viewer_group"
    />


</odoo>
