{
	"root": true,	
	"extends": [
		"plugin:vue/vue3-essential",
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"ignorePatterns": [
		"nightwatch.conf.js",
	
		"*.status.js", 
		"*.ST.js",
		
		"tests/*", 
		"nightwatch/*"
	],
	"rules": {
		"vue/multi-word-component-names": 0,
		"vue/valid-template-root": 0,

		"no-unused-vars": 0,
		"vue/no-unused-vars": 0,

		"no-empty": 0,
		"no-unreachable": 0,
		"no-mixed-spaces-and-tabs": 0,

		"vue/require-v-for-key": 0,
		
		"no-empty-pattern": 0,
		
		"no-useless-escape": 0
	}
}
