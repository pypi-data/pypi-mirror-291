<odoo>

    <record id="analytic_procedure_conclusion_category_view_search" model="ir.ui.view">
        <field name="name">analytic_procedure_conclusion_category - search</field>
        <field name="model">analytic_procedure_conclusion_category</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="analytic_procedure_conclusion_category_view_tree" model="ir.ui.view">
        <field name="name">analytic_procedure_conclusion_category - tree</field>
        <field name="model">analytic_procedure_conclusion_category</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="parent_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="analytic_procedure_conclusion_category_view_form" model="ir.ui.view">
        <field name="name">analytic_procedure_conclusion_category - form</field>
        <field name="model">analytic_procedure_conclusion_category</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                    <field name="parent_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record
        id="analytic_procedure_conclusion_category_action"
        model="ir.actions.act_window"
    >
        <field name="name">Analytic Procedure Conclusion Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">analytic_procedure_conclusion_category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="analytic_procedure_conclusion_category_menu"
        name="Analytic Procedure Conclusion Categories"
        parent="ssi_general_audit.menu_configuration_general_audit"
        action="analytic_procedure_conclusion_category_action"
        sequence="201"
        groups="analytic_procedure_conclusion_category_group"
    />

</odoo>
